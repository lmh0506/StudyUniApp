<view class="page"><swiper class="carousel" indicator-dots="{{true}}" autoplay="{{true}}"><block wx:for="{{carouselList}}" wx:for-item="carousel" wx:for-index="__i0__" wx:key="id"><swiper-item><image class="carousel" src="{{carousel.image}}" mode="aspectFit"></image></swiper-item></block></swiper><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="icon" src="../../static/icos/hot.png"></image><view class="hot-title">热门超英</view></view></view><scroll-view class="page-block hot" scroll-x="true"><block wx:for="{{hotMovies}}" wx:for-item="hot" wx:for-index="__i1__" wx:key="id"><view class="single-poster"><view class="poster-wrapper"><image class="poster" src="{{hot.poster}}" mode></image><view class="movie-name">{{hot.name}}</view><trailer-stars vue-id="{{'1-'+__i1__}}" score="{{hot.score}}" bind:__l="__l"></trailer-stars></view></view></block></scroll-view><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="icon" src="../../static/icos/interest.png"></image><view class="hot-title">热门预告</view></view></view><view class="page-block hot-movies"><block wx:for="{{hotTrailers}}" wx:for-item="trailer" wx:for-index="__i2__" wx:key="id"><video class="hot-movie-single" controls src="{{trailer.trailer}}" poster="{{trailer.poster}}"></video></block></view><view class="page-block super-hot"><view class="hot-title-wrapper"><image class="icon" src="../../static/icos/guess-u-like.png"></image><view class="hot-title">猜你喜欢</view></view></view><view class="page-block guess-u-like"><block wx:for="{{guessLikeMovies}}" wx:for-item="movie" wx:for-index="index" wx:key="id"><view class="single-movie-like"><image class="poster" src="{{movie.cover}}" mode></image><view class="movie-desc"><view class="movie-title">{{movie.name}}</view><trailer-stars vue-id="{{'2-'+index}}" score="{{movie.score}}" showNum="{{false}}" bind:__l="__l"></trailer-stars><view class="movie-info">{{movie.basicInfo}}</view><view class="movie-info">{{movie.releaseDate}}</view></view><view class="movie-oper" data-index="{{index}}" data-event-opts="{{[['tap',[['handlePraiseMe',['$event']]]]]}}" bindtap="__e"><image class="praise-ico" src="../../static/icos/praise.png" mode></image><view class="praise-me">点赞</view><view class="praise-me animation-opacity" animation="{{praiseMeAnimates[index]}}">+1</view></view></view></block></view></view>
<view class="page"><view class="player"><video class="movie" id="myVideo" src="{{movieInfo.trailer}}" poster="{{movieInfo.poster}}" controls></video></view><view class="movie-info"><navigator url="{{'../cover/cover?img='+movieInfo.cover}}"><image class="cover" src="{{movieInfo.cover}}"></image></navigator><view class="movie-desc"><view class="title">{{movieInfo.name}}</view><view class="basic-info">{{movieInfo.basicInfo}}</view><view class="basic-info">{{movieInfo.originalName}}</view><view class="basic-info">{{movieInfo.plotDesc}}</view><view class="basic-info">{{movieInfo.releaseDate}}</view><view class="score-block"><view class="big-score"><view class="score-words">综合评分</view><view class="score-nums">{{movieInfo.score}}</view></view><view class="score-stars"><trailer-stars vue-id="1" score="{{movieInfo.score}}" showNum="{{false}}" bind:__l="__l"></trailer-stars><view class="prise-counts">{{''+movieInfo.prisedCounts+' 人点赞'}}</view></view></view></view></view><view class="line-wrapper"><view class="line"></view></view><view class="plots-block"><view class="plots-title">剧情详情</view><view class="plots-desc">{{movieInfo.plotDesc}}</view></view><view class="scroll-block"><view class="plots-title">演职人员</view><scroll-view class="scroll-list" scroll-x="true"><block wx:for="{{directors}}" wx:for-item="director" wx:for-index="index" wx:key="staffId"><view class="actor-wrapper"><image class="single-actor" data-index="{{index}}" src="{{director.photo}}" mode="aspectFill" data-event-opts="{{[['tap',[['handleStaffImgPreview',['$event']]]]]}}" bindtap="__e"></image><view class="actor-name">{{director.name}}</view><view class="actor-role">{{director.actName}}</view></view></block><block wx:for="{{actors}}" wx:for-item="actor" wx:for-index="index" wx:key="staffId"><view class="actor-wrapper"><image class="single-actor" data-index="{{index+directors.length}}" src="{{actor.photo}}" mode="aspectFill" data-event-opts="{{[['tap',[['handleStaffImgPreview',['$event']]]]]}}" bindtap="__e"></image><view class="actor-name">{{actor.name}}</view><view class="actor-role">{{actor.actName}}</view></view></block></scroll-view></view><view class="scroll-block"><view class="plots-title">剧照</view><scroll-view class="scroll-list" scroll-x="true"><block wx:for="{{movieInfo.plotPics}}" wx:for-item="img" wx:for-index="index" wx:key="*this"><image class="plot-image" data-index="{{index}}" src="{{img}}" mode="aspectFill" data-event-opts="{{[['tap',[['handleImgPreview',['$event']]]]]}}" bindtap="__e"></image></block></scroll-view></view></view>
.movie{
	width: 100%;
	height: 440rpx;
}
.player {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	background: black;
}
.movie-info{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background: #f7f4f9;
	padding: 40rpx 20rpx;
}
.cover{
	width: 280rpx;
	height: 380rpx;
}
.movie-desc{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-left: 30rpx;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	width: 400rpx;
}
.title{
	font-size: 30px;
}
.basic-info{
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.score-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-justify-content: space-around;
	    -ms-flex-pack: distribute;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	background: #fff;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	-webkit-box-shadow: 3px 2px 10px #dedede;
	        box-shadow: 3px 2px 10px #dedede;
}
.score-words{
	font-size: 12px;
	color: grey;
}
.score-nums{
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #FEAB2A;
	line-height: 60rpx;
}
.prise-counts{
	font-size: 12px;
	color: grey;
	line-height: 40rpx;
}
.plots-block{
	background: #f2f4f9;
	padding: 20rpx 40rpx;
}
.plots-title{
	color: #A9A9A9;
	font-size: 14px;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 16px;
}
.scroll-block{
	background: #f7f4f9;
	padding: 20rpx 40rpx;
}
.scroll-list{
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-image{
	width: 220rpx;
	height: 320rpx;
	margin-right: 10rpx;
}
.single-actor{
	width: 170rpx;
	height: 240rpx;
	margin-right: 10rpx;
}
.actor-wrapper{
	display: inline-block;
}
.actor-name{
	width: 170rpx;
	text-align: center;
	font-size: 15px;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.actor-role{
	width: 170rpx;
	text-align: center;
	color: #a9a9a9;
	font-size: 13px;
}

